  <body>
    <% include partials/navbar.ejs %>
    <div id='rootContainer'>
    </div>
    <div class="ui basic modal" id='loginModal'>
        <h2 class='loginHeader'>Please Enter Your Login Information</h2>
        <form action="/users/login" method="POST" id="mainLoginForm">
          <input type="text" name='email' placeholder='email'>
          <input type="password" name='password' placeholder='password'>
          <button>Submit</button>
          <span class='exitL'>EXIT</span>
        </form>
      </div>

      <div class="ui basic modal" id='registerModal'>
          <h2 class='loginHeader'>Please Enter Your Personal Information</h2>
          <form action="/users" method="POST" id="mainRegisterForm">
            <input type="text" name='name' placeholder='name'>
            <input type="text" name='email' placeholder='email'>
            <input type="text" name='phone' placeholder='phone'>
            <input type="password" name='password' placeholder='password'>
            <button>Submit</button>
            <span class='exitR'>EXIT</span>
          </form>
        </div>
    <% include partials/footer.ejs %>
